{
  "hosting": {
    "public": "dist/hackitall-bcr",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/bcr-backend/:path*",
        "destination": "https://bcr-backend.herokuapp.com/:path",
        "type": 301
      }
    ]
  }
}